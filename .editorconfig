; top-most EditorConfig file
root = true

; Unix-style newlines
[*]
end_of_line = LF
charset = utf-8

; Keeping files tidy
insert_final_newline = true
trim_trailing_whitespace = true

; Default indenting options
indent_style = space
indent_size = 4

; Override configuration below, per-extension

[*.{js,js.dist,scss,css,svg,html}]

[*.twig]

[*.{yml,yml.dist}]

[*.{md,rst}]
trim_trailing_whitespace = false
